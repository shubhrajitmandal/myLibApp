<div class="container">
    <div class="landing-cover">
        <h2>Edit Author</h2>

        {{> errorMessage}}

        <form action="/authors/{{author.id}}?_method=PUT" method="POST" class="form-author">
            <label class="author-name">Name</label>
            <input type="text" name="name" class="author-input" value="{{author.name}}">

            <div>
                <a href="javascript:history.back()" class="btn cancel">Cancel</a>
                <button type="Submit" class="btn update">Update</button>
            </div>
        </form>
    </div>
</div>