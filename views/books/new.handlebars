<div class="form-container">
    <h2>Add Book</h2>

    <form action="/books" method="POST" class="form-book">

        {{!-- <div class="error">
        {{> errorMessage}}
    </div> --}}

        <div class="form-left">
            <div class='form-group'>
                <label>Title</label>
                <input type="text" name="title" value={{book.title}}>
            </div>

            <div class='form-group'>
                <label>Author</label>
                <select name="author">
                    {{#each authorsList}}
                        {{!-- {{#if (author.id === book.author)}} --}}
                        <option label="{{name}}" value="{{id}}"></option>
                        {{!-- {{else}} --}}
                        {{!-- <option label="{{name}}" value="{{id}}"></option>
            {{/if}} --}}
                    {{/each}}
                </select>
            </div>

            <div class='form-group'>
                <label>Publish Date</label>
                <input type="date" name="publish_date">

            </div>

            <div class='form-group'>
                <label>Page Count</label>
                <input type="number" name="page_count" value={{book.page_count}}>
            </div>
        </div>

        <div class="form-right">
            <div class="cover">
                <label>Cover</label>
                <input type="file" name="cover" class='filepond'>
            </div>
        </div>

        <div class='form-text'>
            <label>Description</label>
            <textarea name="description">{{book.description}}</textarea>
            <div>
                <a href="/authors" class="btn cancel">Cancel</a>
                <button type="Submit" class="btn create">Create</button>
            </div>
        </div>

    </form>
</div>